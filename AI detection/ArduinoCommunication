import serial
import time

# Use COM5 since that's your Arduino port
port = "COM5"
baud = 9600

ser = serial.Serial(port, baud, timeout=1)
time.sleep(2)  # wait for Arduino reset

print("Connected to Arduino on", port)

while True:
    line = ser.readline().decode('utf-8').strip()
    if line:
        try:
            temp, ph, tds = line.split(",")
            print(f"Temperature: {temp} Â°C | pH: {ph} | TDS: {tds} ppm")
        except ValueError:
            print("Bad line:", line)
